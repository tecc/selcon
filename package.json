        "test": "npm run lint",
        "prepublish": "npm run test",
        "prepack": "npm run build"
    },
    "dependencies": {
        "arg": "^5.0.1",
        "browserify": "^17.0.0",
        "colors": "^1.4.0",
        "csso": "^4.2.0",
        "escape-string-regexp": "^5.0.0",
        "front-matter": "^4.0.2",
        "handlebars": "^4.7.7",
        "html-minifier-terser": "^6.0.2",
        "luxon": "^2.0.2",
        "node-gyp": "^8.3.0",
        "pkg-dir": "^5.0.0",
        "sass": "^1.43.4",
        "synchronized-promise": "^0.3.1",
        "terser": "^5.9.0",
        "tsconfig-paths": "^3.11.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.4.3",
        "walk-sync": "^3.0.0"
    },
    "devDependencies": {
        "@types/browserify": "^12.0.37",
        "@types/csso": "^4.2.0",
        "@types/eslint": "^7.28.0",
