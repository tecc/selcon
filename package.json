    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tecc/selcon/issues",
        "email": "tecc@tecc.me"
    },
    "browser": {},
    "bin": "./dist/cli/index.js",
    "scripts": {
        "start": "npm run build && node dist/cli/index.js",
        "build": "rm -rf ./dist && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
