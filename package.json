        "@types/luxon": "^2.0.4",
        "@types/minify": "^8.0.0",
        "@types/node": "^16.9.1",
        "@types/pkg-dir": "^2.0.1",
        "@types/sass": "^1.43.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "eslint": "^7.32.0"
    },
    "files": [
        "dist/**/*",
        "websrc/**/*",
        "templates/**/*",
        "cli.sh",
        "tsconfig.json"
    ]
}
